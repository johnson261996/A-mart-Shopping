<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_layout">

            <RelativeLayout
                android:id="@+id/new_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ebca0707"
                android:elevation="4dp"
                android:paddingBottom="24dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/new_header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@drawable/man" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_profile_layout"
                android:layout_margin="5dip"
                android:background="@drawable/border_shadow"
                android:elevation="4dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

                    <EditText android:id="@+id/new_input_oldpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="textPassword"
                        android:hint="old Password"/>

                <!-- Password Label -->

                    <EditText android:id="@+id/new_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="change Password"/>

                <!-- Password Re-enter Label -->

                    <EditText android:id="@+id/new_input_reEnterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="textPassword"
                        android:hint="Confirm Password"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>